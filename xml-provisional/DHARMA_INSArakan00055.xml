               <listApp>
                <app loc="1">
                    <lem>-dharmmānurāgeṇa</lem>
                    <rdg source="bib:Sircar1957-1958_04">-dharmmān<choice><sic>a</sic><corr>u</corr></choice>rāgeṇa</rdg>
                 </app>
                  <app loc="2">
                     <lem>-sampan-</lem>
                     <rdg source="bib:Sircar1957-1958_04">-samya<choice><sic>n</sic><corr>ṅ</corr></choice>-</rdg>
                  </app>
